#!/bin/bash

load etc ami
load etc $(basename $0)

function init_svn() {
	local d="$AMI_SVND"
	[ -d "$d" ] || {
		mkdir -p "$d" ;
	}
	for r in $SVN_REPOS; do
		[ -d "$d/$r/.svn" ] || {
			cd "$d" && svn checkout --depth=empty svn://$SVN_SERVER/$r ;
		}
	done
}

function init_git() {
	local d="$AMI_GITD"
	[ -d "$d" ] || {
		mkdir -p "$d" ;
	}
	[ -d "$d/.git" ] || {
		cd "$d" && git init &&
		  cp $MASTER_README README.md &&
		  echo $AMI_VERSION >> README.md &&
		  git add . && git commit -m "init";
	}
}

function init_aur() {
	local d="$AMI_AURD"
	[ -d "$d" ] || {
		mkdir -p "$d" ;
	}
}

function init_pkg() {
	local d="$PCM_SHARE"
	[ "$1" = "list" ] && {
		shift
		local o=${1:--1}
		cd $d && ls $o PKGBUILD.proto PKGBUILD-*.proto
		return
	}
	local p=$([ -z "$1" ] && echo PKGBUILD || echo PKGBUILD-$1)
	# that's too ob-scyooree...
#	echo $AMI_CWD $(pwd)
	cd $AMI_CWD && cp -i $d/$p.proto PKGBUILD
#	echo "WTF($d/$p)"
}

# main()
case $1 in
	-h)
			echo "# '$AMI_PROG init *&~pkg' is default"
			echo "Usage: $AMI_PROG init [svn|git|aur|pkg]" ;;
	svn)
			init_svn ;;
	git)
			init_git ;;
	aur)
			init_aur ;;
	pkg)
			shift
			init_pkg $* ;;
	*)
			init_svn
			init_git
			init_aur ;;
esac
